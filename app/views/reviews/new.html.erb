<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-center">
  <div class="col-lg-4">
    <div>
      <h1 class=text-center>Leave a new review</h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit "Submit Review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
