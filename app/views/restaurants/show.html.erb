<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category.capitalize %>
</p>

<p><strong>Ratings:</strong></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %> ⭐️ | Comment: <%= review.content %></li>
  <% end %>
</ul>

<%= link_to 'Back', restaurants_path, class: 'btn btn-info' %>
<%= link_to 'Leave a Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
